        //Array index for Remain Connectible Time (supplied in seconds)
#define REM_CONN_TME_INDEX                   9

#define MAX_DEVNAME_CHRS_IN_ADVERT           0
        //DiscoverableMode (2==General)
#define DISCOVERY_MODE                       2

