        //Min/max device names allowed to arrive via characteristic DVC_NME_INDEX
#define MIN_DEVICENAME_LEN                   4 
#define MAX_DEVICENAME_LEN                   20

        //Ble is connected error
#define BLE_IS_CONNECTED                     0x604C


