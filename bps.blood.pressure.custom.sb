  dim rc
  rc = BleAdvRptAppendAD(scRpt$,nTag,adData$)
  AssertResCode(rc,2070)
endfunc rc

//==============================================================================
//==============================================================================
function ScanReportCommit()
  dim rc,rpt$
  rpt$=""
  rc = BleAdvRptsCommit(rpt$,scRpt$)
  AssertResCode(rc,2080)
endfunc rc


